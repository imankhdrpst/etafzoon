<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_all"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <!-- caption -->
            <TextView
                android:id="@+id/txt_inspection_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/background_box_red"
                android:padding="5dp"
                android:text="@string/draft"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <!-- data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- address -->
                <TextView
                    android:id="@+id/txt_property_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/coal"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- note -->
                <TextView
                    android:id="@+id/txt_inspection_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:maxLines="3"
                    android:textColor="@color/gray_light_text"
                    android:textSize="13sp"
                    />

            </LinearLayout>


        </LinearLayout>

        <!-- date and type -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp">

            <!-- date -->
            <TextView
                android:id="@+id/txt_inspection_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- type -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_inspection_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/img_inspection_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>
