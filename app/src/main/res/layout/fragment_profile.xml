<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <!-- lay detials -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- img profile picture -->
                    <RelativeLayout
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:background="@drawable/circle_dashed"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile_picture"
                            android:layout_width="86dp"
                            android:layout_height="86dp"
                            android:src="@drawable/profile_place_holder" />
                    </RelativeLayout>

                    <!-- first name and last name -->
                    <TextView
                        android:id="@+id/txt_profile_first_name_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="11dp"
                        android:font='@{"sans"}'
                        android:textColor="@color/text_dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- mobile number -->
                    <TextView
                        android:id="@+id/txt_profile_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="11dp"
                        android:font='@{"sans"}'
                        android:textColor="@color/text_dark_gray"
                        android:textSize="13sp" />


                    <!-- first name and last name -->
                    <TextView
                        android:id="@+id/txt_profile_city_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="11dp"
                        android:font='@{"sans"}'
                        android:textColor="@color/text_dark_gray"
                        android:textSize="13sp" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

        <com.loopeer.shadow.ShadowView
            android:id="@+id/shadow_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cornerRadiusTL="40dp"
            app:cornerRadiusTR="40dp"
            app:shadowMarginTop="15dp"
            app:shadowRadius="14dp">

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout_profile_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:el_duration="1500"
                app:el_expanded="true"
                app:el_parallax="0">

                <LinearLayout
                    android:id="@+id/lay_profile_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_bottom_sheet"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="24dp">


                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

        </com.loopeer.shadow.ShadowView>


        <RelativeLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.6"
            android:background="@drawable/background_busy"
            android:clickable="true"
            android:padding="25dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>
</layout>