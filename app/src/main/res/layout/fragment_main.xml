<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:paddingStart="18dp"
                android:orientation="vertical">

                <!-- notification bar -->
                <RelativeLayout
                    android:id="@+id/lay_notification_bar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:font='@{"sans"}'
                        android:text="@string/hello"
                        android:textColor="@color/text_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_notifications"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_height="17dp"
                        android:layout_width="17dp"
                        android:src="@drawable/ic_light_notification" />


                </RelativeLayout>

                <!-- text view name -->
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:font='@{"sans"}'
                    android:textColor="@color/text_blue"/>

                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/prg_banners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    app:mpb_progressStyle="horizontal"
                    android:visibility="gone"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
                <!-- section banners -->
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    >

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_height="164dp"
                        android:layout_width="match_parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>

                <!-- section activities chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <!-- text view label of section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:font='@{"sans"}'
                            android:text="@string/activities_chart"/>

                        <!-- spinner select month -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background_light_gray"
                            android:gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:paddingStart="8sp"
                            android:paddingEnd="12dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="8dp"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="-90"
                                android:tint="@color/text_dark_gray"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/month"
                                android:font='@{"sans"}'
                                android:textColor="@color/dark_gray"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="24dp"
                        />
                </LinearLayout>

                <!-- section latest posts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <!-- text view label of section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:font='@{"sans"}'
                            android:text="@string/latest_posts"/>

                        <!-- show all -->
                        <TextView
                            android:id="@+id/txt_lattest_posts_show_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_all"
                            android:font='@{"sans"}'
                            android:textColor="@color/gray"
                            />


                    </RelativeLayout>

                    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                        android:id="@+id/prg_latest_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        app:mpb_progressStyle="horizontal"
                        android:visibility="gone"
                        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_latest_posts"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <!-- progress bar layout-->
        <RelativeLayout
            android:alpha="0.6"
            android:background="@drawable/background_busy"
            android:clickable="true"
            android:id="@+id/progress_bar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="25dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</layout>











