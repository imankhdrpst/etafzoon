<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/auth_back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_logo_type"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginStart="72dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/ic_logo_1" />


            <!-- login box -->
            <LinearLayout
                android:id="@+id/lay_login_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_box_login"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp"
                    android:padding="24dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/user_id_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        app:boxBackgroundColor="@color/white"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintTextColor="@color/gray"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidth="0dp"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:errorTextColor="@color/red"
                        app:startIconDrawable="@drawable/ic_account_box">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/user_id_input"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/coal"
                            android:textSize="13sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/login_button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/background_box_blue">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textAppearance="@style/RegularButtonTextAppearance" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:background="@drawable/background_busy"
        android:clickable="true"
        android:padding="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</RelativeLayout>


