<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            >

            <com.mikhaellopez.circleview.CircleView
                android:id="@+id/circleView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cv_border="false"
                app:cv_border_color="#000000"
                android:layout_centerInParent="true"
                app:cv_border_width="0dp"
                app:cv_color="#303f51b5"
                app:cv_shadow="false"
                app:cv_shadow_color="#403f51b5"
                app:cv_shadow_radius="0" />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="62dp"
            android:paddingTop="8dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_mood_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:font='@{"sans"}'
                android:text="@string/latest_posts"/>

            <TextView
                android:id="@+id/txt_mood_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark_gray"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:gravity="end"
                android:textStyle="bold"
                android:font='@{"sans"}'
                android:text="@string/latest_posts"/>

        </LinearLayout>

    </RelativeLayout>

</layout>
