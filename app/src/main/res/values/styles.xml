<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_dark_gray</item>
        <item name="colorPrimaryDark">@color/text_blue</item>
        <item name="colorAccent">@color/text_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_cross_white</item>
    </style>

