<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/text_blue</item>
        <item name="colorAccent">@color/text_blue</item>
        <item name="colorSecondary">@color/text_blue</item>
        <item name="colorOnPrimary">@color/text_blue</item>
        <item name="colorOnSurface">@color/text_blue</item>
        <item name="colorOnSecondary">@color/text_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="TextPicker">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:selectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:clickable">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textColor">@color/YIGray5</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textColor">@color/YIGray5</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/button_background_light_gray_border_blue</item>
        <item name="android:textColor">@color/YIGray4</item>
        <item name="android:textSize">11dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BoldButtonTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularButtonTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
